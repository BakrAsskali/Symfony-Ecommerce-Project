{% extends 'base.html.twig' %}

{% block body %}
    {% include 'nav.html.twig' %}

    <div class="container">
        <h1 class="category">{{ category.name }}</h1>
        {% for product in products %}
            <p class="name">{{ product.name }}</p>
            <p class="price">{{ product.price }} MAD</p>
        {% endfor %}
    </div>
    <style>
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f7f7f7;
      border-radius: 10px;
      box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
      font-size: 36px;
      margin-bottom: 20px;
    }

    p {
      font-size: 20px;
      line-height: 1.5;
      margin-bottom: 10px;
    }

    .price {
      font-weight: bold;
      font-size: 24px;
      color: #333;
      margin-bottom: 20px;
    }

    .category {
      font-size: 20px;
      font-style: italic;
      color: #888;
    }

    </style>
{% endblock %}